{% extends 'base.html.twig' %}

{% block title %}Bookland | Voir genre{% endblock %}
{% block logo %}
    <img src="../../img/logo-transparent.png" width="30" height="30" class="d-inline-block align-top" alt="logo">
{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <td>
                <p class="h2">{{ genre.nom }}</p>
            </td>
            <td style="text-align: right;">
                {{ include('genre/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
            <tr>
                <th> Nombre de pages écrites dans ce genre </th>
                <td> {{ nbPages }} </td>
            </tr>
            <tr>
                <th> Nombre moyen de pages écrites dans ce genre </th>
                <td> {{ moy }} </td>
            </tr>
        </tbody>
    </table>

    <table>
        <tr>
            <td>
                <a href="{{ path('genre_index') }}"><button type="button" class="btn btn-primary btn-sm">Retour à la liste</button></a>
            </td>
            <td>
                <a href="{{ path('genre_edit', {'id': genre.id}) }}"><button type="button" class="btn btn-secondary btn-sm">Modifier</button></a>
            </td>
            <td>
                <a href="{{ path('genre_showAuteur', {'id': genre.id}) }}"><button type="button" class="btn btn-success btn-sm">Voir les auteurs</button></a>
            </td>
        </tr>
    </table>

{% endblock %}
