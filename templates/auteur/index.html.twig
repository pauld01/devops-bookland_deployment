{% extends 'base.html.twig' %}

{% block title %}Bookland | Auteurs{% endblock %}
{% block logo %}
    <img src="../../img/logo-transparent.png" width="30" height="30" class="d-inline-block align-top" alt="logo">
{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <td>
                <p class="h2">Les auteurs</p>
            </td>
            <td style="text-align: right;">
                <a href="{{ path('auteur_new') }}"> <button type="button" class="btn btn-primary btn-lg"><b>+</b> Ajouter un auteur</button></a>
            </td>
        </tr>
    </table>

    <table class="table">
        <thead>
            <tr style="text-align: center;">
                <th>Nom / Prénom</th>
                <th>Genre</th>
                <th>Date de naissance</th>
                <th>Nationalité</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr style="text-align: center;">
                <td >{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('d-m-Y') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td style="text-align: right;">
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}"> <button type="button" class="btn btn-primary btn-sm">Voir</button></a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}"> <button type="button" class="btn btn-secondary btn-sm">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'auteurs trouvés dans la base de données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
