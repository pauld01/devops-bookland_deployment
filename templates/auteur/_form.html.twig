{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>{{ form_label(form.nom_prenom, 'Nom Prénom') }}</th>
                <td>{{ form_widget(form.nom_prenom) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.sexe, 'Genre (M/F)') }}</th>
                <td class = "table-small">{{ form_widget(form.sexe) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.date_de_naissance) }}</th>
                <td colspan = 1>{{ form_widget(form.date_de_naissance) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.nationalite, 'Nationalité') }}</th>
                <td>{{ form_widget(form.nationalite) }}</td>
            </tr>
            <tr>
                <td colspan = 2 style="text-align: left;">
                    <button class="btn btn-outline-success btn-sm">{{ button_label|default('Valider') }}</button>
                    <a href="{{ path('auteur_index') }}"><button type="button" class="btn btn-outline-danger btn-sm">Annuler</button></a>
                </td>
            </tr>
        </tbody>
    </table> 
{{ form_end(form) }}
